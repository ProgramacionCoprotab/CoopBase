<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.coprotab.agarcia.coopbase.Main"
    android:background="@android:color/background_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CÃ³digo de Entrada"
        android:id="@+id/txtRack"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtCodRack"
        android:layout_below="@+id/txtRack"
        android:layout_centerHorizontal="true"
        android:enabled="true"
        android:editable="false"
        android:width="700dip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fardos"
        android:id="@+id/textView2"
        android:layout_below="@+id/txtCodRack"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:minWidth="0dp" />

    <ListView
        android:layout_width="550dip"
        android:layout_height="wrap_content"
        android:id="@+id/listFardos"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView2"
        android:stackFromBottom="false" />

</RelativeLayout>
